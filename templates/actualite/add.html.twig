{% extends 'base.html.twig' %}

        {% block body %}
          <div class="content-body">
            <div class="container-fluid">
				<div class="row page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active">Ajouter un article</li>
					</ol>
                </div>
                <!-- row -->
                <div class="row">
                    <div class="col-xl-12 col-xxl-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Première étape</h4>
                            </div>
                            <div class="card-body">
								<div id="smartwizard" class="form-wizard order-create">
									<ul class="nav nav-wizard">
										<li><a class="nav-link" href="#wizard_Service"> 
											<span>1</span> 
										</a></li>
										<li><a class="nav-link" href="#wizard_Time">
											<span>2</span>
										</a></li>
										<li><a class="nav-link" href="#wizard_Details">
											<span>3</span>
										</a></li>
									</ul>
									<div class="tab-content">
										<div id="wizard_Service" class="tab-pane" role="tabpanel">
											<div class="row">
												<div class="col-lg-6 mb-2">
													<div class="mb-3">
														<label class="text-label form-label">ID Article*</label>
														<input type="text" name="firstName" class="form-control" placeholder="Entrez l'identifiant de l'article" required="">
													</div>
												</div>
												<div class="col-lg-6 mb-2">
													<div class="mb-3">
														<label class="text-label form-label">Titre Article*</label>
														<input type="text" name="lastName" class="form-control" placeholder="Entrez le titre de l'article" required="">
													</div>
												</div>
												<div class="col-lg-6 mb-2">
													<div class="mb-3">
														<label class="text-label form-label">Catégorie*</label>
														<input type="email" class="form-control" id="inputGroupPrepend2" aria-describedby="inputGroupPrepend2" placeholder="nheb nhotha liste roulante taref kifeh ena nsit hh !" required="">
													</div>
												</div>
							
												<div class="col-lg-12 mb-3">
													<div class="mb-3">
														<label class="text-label form-label">Contenu*</label>
														<input type="text" name="place" class="form-control" placeholder="Entrez le contenu ici" required="">
													</div>
												</div>
											</div>
										</div>
										<div id="wizard_Time" class="tab-pane" role="tabpanel">
											<div class="row">
												<div class="col-lg-6 mb-2">
													<div class="mb-3">
														<label class="text-label form-label">Adresse de l'auteur*</label>
														<input type="text" name="firstName" class="form-control" placeholder="auteur@exemple.com " required="">
													</div>
												</div>
												<div class="col-lg-6 mb-2">
													<div class="mb-3">
														<label class="text-label form-label">Date de publication*</label>
														<input type="email" class="form-control" id="emial1" placeholder="Entrez la date de publication" required="">
													</div>
												</div>
												<div class="col-lg-6 mb-2">
													<div class="mb-3">
														<label class="text-label form-label">Durée*</label>
														<input type="text" name="phoneNumber" class="form-control" placeholder="Tapez la durée de l'article" required="">
													</div>
												</div>
												<div class="col-lg-6 mb-2">
													<div class="mb-3">
														<label class="text-label form-label">Statut*</label>
														<input type="text" name="place" class="form-control" placeholder="choisir le statut de l'article w yetbadel wahdou" required="">
													</div>
												</div>
											</div>
										</div>
                                        <div id="wizard_Details">
										<div class="d-flex justify-content-start mb-4">
											
											
										    <div id="liveAlertPlaceholder" class="col d-flex justify-content-center align-items-center" >

            
											  <a id="myButton" href="listeArticle.html" class="btn btn-outline-success btn-rounded fs-18"  >Afficher la liste des articles</a>
										    </div>
                                         </div>
                                        </div>
								
										</div>
									</div>
								</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

